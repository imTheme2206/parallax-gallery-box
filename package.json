{
  "name": "parallax-gallery-box",
  "version": "0.1.0",
  "description": "React components for creating parallax image galleries and containers",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lib/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/lib/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "src/lib",
    "src/components",
    "src/hooks",
    "src/controller",
    "build-lib.ts",
    "tsconfig.json",
    "tsconfig.build.json",
    "README.md"
  ],
  "scripts": {
    "dev": "bun --hot src/index.tsx",
    "start": "NODE_ENV=production bun src/index.tsx",
    "build": "bun run build-lib.ts",
    "postinstall": "bun run build-lib.ts"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest",
    "bun-plugin-tailwind": "^0.0.15",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4.1.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/imtheme2206/parallax-gallery-box"
  }
}
